set main-view-author-width = 2
set main-view-date-display = relative
set main-view-date-width = 7
set line-graphics = ascii
set split-view-height = 90%
set commit-order = date

color cursor default black
color date green default
color author blue default
color id yellow default # commit id
color graph-commit default default # dot in the main view
color title-focus color8 black # grey
color title-blur color8 black # grey

bind status C !git commit --verbose
